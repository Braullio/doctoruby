<div class='modal fade' id='modal_doctor_new' tabindex='-1' role='dialog' aria-labelledby='modal_doctor_new' aria-hidden='true'>
  <div class='modal-dialog modal-ml' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='exampleModalLabel'>
          Cadastrar Novo Doutor
        </h5>

        <button type='button' class='close' data-dismiss='modal' aria-label='Close'>
          <span aria-hidden='true'>&times;</span>
        </button>
      </div>

      <div class='modal-body'>

        <%= form_for doctor_new do |f| %>
          Nome
          <%= f.text_field :name, class: 'form-control mb-2', autocomplete: 'off', required: true %>
          CRM
          <%= f.text_field :crm, maxlength: 7, class: 'form-control mb-2', autocomplete: 'off', required: true %>
          CRM UF
          <%= f.select(:crm_uf, all_uf_brazilian.collect { |p| [ p ] }, {}, { class: 'custom-select' }) %>

        <div class='actions mt-3'>
          <%= f.submit 'Criar Doutor', class: 'btn btn-home btn-success float-right' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>