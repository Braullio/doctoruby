<table class='table table-hover'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col' class='width-40'>Name</th>
      <th scope='col' class='width-20'>CRM</th>
      <th scope='col' class='width-20'>CRM UF</th>
      <th scope='col' class='width-20'>Ações</th>
    </tr>
  </thead>

  <tbody>
    <% all_doctors.each do |doctor| %>
    <tr>
      <th scope='row'><%= doctor.name %></th>
      <td><%= doctor.crm %></td>
      <td><%= doctor.crm_uf %></td>
      <td>
        <a data-toggle="modal" data-target="#modal_doctor_edit" 
           data-doctor-id="<%= doctor.id %>" data-doctor-name="<%= doctor.name %>" 
           data-doctor-crm="<%= doctor.crm %>" data-doctor-crm-uf="<%= doctor.crm_uf %>" 
           class="btn-sm btn-warning"><i class="fa fa-cog"></i> Editar</a>

        <%= link_to doctor, method: :delete, class: 'btn-sm btn-danger', data: { confirm: "Tem certeza para excluir o(a) Dr(a) #{doctor.name}?" } do %>
          <i class="fas fa-trash-alt"></i> Excluir
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>